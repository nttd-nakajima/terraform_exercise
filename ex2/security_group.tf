# ===========================
# Security Group
# ===========================
resource "aws_security_group" "ssh" {
  name   = "ex2-ssh-sg"
  vpc_id = aws_vpc.vpc.id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["14.101.163.238/32"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "ex2-ssh-sg"
  }
}

